project:                genomon_test
sample_name:            test01
sample_date:            20150216


#
# Data directory
#
project_root:               /home/eigos/Data/GenomonProj
project_dir_tree:
    project_directory:
        data:
            sample_date:
                sample_name
        results:
            run_date:
                sample_date_sample_name:
                    - config
                    - script
                    - log
                    - out:
                        - fastq
                        - bam
                        - annovar
                        - fisher
                        - cnv
                        - fusion
                        - sv
#
# Input files
#
input_file_dir:             /home/eigos/Data/GenomonProj/genomon_test/data/20150216/sampledata
input_file_type:            paired_fastq # paired_fastq,  single_fastq, paired_bam, single_bam
file_name:                  ?_100_{pair_id}.fastq
control_file_name:          a_100_{pair_id}.fastq
disease_file_name:          b_100_{pair_id}.fastq
pair_id:
                            - 1
                            - 2
sample_sub_type:
                            - s_B*
                            - s_O*

#bed_files:                  None # for Panel


